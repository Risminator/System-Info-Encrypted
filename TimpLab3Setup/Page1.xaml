<Page x:Class="TimpLab3Setup.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TimpLab3Setup"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="600"
      Title="Download and Install Updates">

    <StackPanel>
        <TextBlock x:Name="TextInstall" Text="Installing the Update..." Margin="50 150 0 0"/>
        <ProgressBar x:Name="pbStatus" Height="20" Margin="50 20 50 0" Minimum="0" Maximum="100" IsIndeterminate="True" />
    </StackPanel>
</Page>
